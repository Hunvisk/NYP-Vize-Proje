                <div class="input-group-append">
                    <button class="btn btn-primary search-button" type="button">Ara</button>
                </div>
            </div>
        </div>
        <div class="search-form">
            <h3>Filtrele</h3>
            <form>
                <div class="row">
                    <div class="col">
                        <label for="location">İl-İlçe - Mahalle</label>
                        <input type="text" id="location" placeholder="Lütfen il, ilçe veya mahalle adını girin">
                    </div>
                    <div class="col">
                        <label for="price">Fiyat</label>
                        <input type="text" id="price" placeholder="Lütfen fiyat aralığını girin">
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label for="rooms">Oda Sayısı</label>
                        <select id="rooms">
                            <option value="">Seçiniz</option>
                            <option value="1">1+0</option>
                            <option value="2">2+1</option>
                            <option value="3">3+1</option>
                            <option value="4">4+1</option>
                            <option value="5">5+1</option>
                        </select>
                    </div>
                    <div class="col">
                        <label for="metrekare">Metrekare</label>
                        <input type="text" id="metrekare" placeholder="Lütfen Metrekare aralığını girin">
                    </div>
                </div>
                <div class="row">
                    <button type="button" id="filters">Filtrele</button>
                    <br>
                    <br>
                </div>
                <div class="row">
                    <!-- Sıralama Dropdown -->
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Sırala
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">Popülerliğe göre sırala</a>
                            <a class="dropdown-item" href="#">En Son Eklenenler</a>
                            <a class="dropdown-item" href="#">Fiyata Göre Artan</a>
                            <a class="dropdown-item" href="#">Fiyata Göre Azalan</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
