    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .custom-container {
            width: 100%;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }


        .search-form {
            background-color: #f2f2f3;
            padding: 20px;
            border-radius: 5px;
        }

        .search-bar {
            margin-bottom: 20px;
        }

        .search-button {
            margin-left: 10px;
            background-color: #4CAF50;
        }

        .search-form h2 {
            margin-top: 0;
            margin-bottom: 20px;
        }

        .search-form .row {
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
        }

            .search-form .row .col {
                flex: 1;
                margin-right: 10px;
            }

                .search-form .row .col:last-child {
                    margin-right: 0;
                }

        .search-form label {
            display: block;
            margin-bottom: 5px;
        }

        .search-form input[type="text"],
        .search-form select {
            width: 100%;
            padding: 5px;
            border: 1px solid;
            border-radius: 5px;
        }

        .search-form select {
            height: 38px;
        }

        .search-form button[type="button"] {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .search-form button[type="button"]:hover {
                background-color: #45a049;
            }

        .dropdown {
            margin-bottom: 20px;
        }

        .ilanlar-title {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .ilan-container {
            position: relative;
            width: 100%;
            height: 200px;
            margin-bottom: 40px; /* Boyut büyütüldü */
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .ilan-container:hover {
                transform: translateY(-5px);
                box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            }

        .ilan-img {
            width: 200px;
            float: left;
            margin-right: 20px;
        }

        .ilan-info {
            overflow: hidden;
        }

        .ilan-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .ilan-filters {
            margin-bottom: 10px;
            background-color: #f9f9f9;
        }

        .ilan-price {
            font-size: 16px;
            font-weight: bold;
            color: #007bff;
            margin-bottom: 10px;
        }

        .ilan-address {
            font-size: 14px;
            color: #666;
        }

        .ilan-actions {
            display: none;
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            padding: 10px;
            background-color: #f9f9f9;
            border-radius: 0 8px 0 8px;
            box-shadow: -3px 3px 10px rgba(0, 0, 0, 0.1);
        }

        .ilan-container:hover .ilan-actions {
            display: block;
            background-color: #f9f9f9;
            box-shadow: -3px 3px 10px rgba(0, 0, 0, 0.1);
        }

        /* Renkler Değiştirildi */
        .ilan-actions .ilan-action {
            display: flex;
            align-items: center;
            color: #fff;
            background-color: #007bff; /* Mavi */
            padding: 8px 15px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .ilan-actions .ilan-action:hover {
                background-color: #28a745; /* Yeşil */
            }

            .ilan-actions .ilan-action.save {
                background-color: #dc3545; /* Kırmızı */
            }

            .ilan-actions .ilan-action.favorite {
                background-color: #ffc107; /* Sarı */
            }

            .ilan-actions .ilan-action.phone {
                background-color: #17a2b8; /* Turkuaz */
            }
