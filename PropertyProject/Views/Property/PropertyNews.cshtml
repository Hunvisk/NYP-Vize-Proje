
@{
    ViewData["Title"] = "Emlak Haberleri";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emlak Haberleri</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .carousel-inner img {
            width: 100%;
            height: 50%; /* Sayfanın tamamını kaplaması için */
            object-fit: cover; /* Resimleri dolduracak şekilde ayarla */
        }

        .haberler {
            margin-top: 20px;
        }

        .haber {
            margin-bottom: 20px;
            background-color: #fff;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow: hidden; /* İçeriği container içinde tutmak için */
        }

            .haber img {
                float: left;
                margin-right: 15px;
                border-radius: 4px;
                max-width: 150px; /* Resimlerin maksimum genişliği */
                max-height: 150px; /* Resimlerin maksimum yüksekliği */
            }

        .haber-content {
            overflow: hidden; /* İçeriği container içinde tutmak için */
        }

        .haber-title {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .haber-tarih {
            color: #888;
        }


    </style>
</head>
<body>

    <!-- Carousel Slider -->
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
